<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".VideoDocActivity" >

    <LinearLayout
        android:id="@+id/lynout_bmtVideodoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <include layout="@layout/scroll_banner" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lynout_contentVideodoc"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lynout_bmtVideodoc"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lynout_contentDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" >

            <TextView
                android:id="@+id/tv_nameDesc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="SYNNOS"
                android:textColor="@color/white" />

            <ScrollView
                android:id="@+id/scroll_contentDesc"
                android:layout_width="fill_parent"
                android:layout_height="150dp" >

                <TextView
                    android:id="@+id/lynout_contentDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/tupac"
                    android:textColor="@color/white" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lynout_titleDoc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_titleDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Docs/Movies"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/shape_line"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:background="@layout/shape_line"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lynout_contentTitleDoc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lynout_titleDoc"
            android:background="@color/grey"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_contentTitleDoc"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/tupac" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_nameArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tupac"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_timeVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:25"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/videoSurfaceContainer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lynout_contentDesc"
            android:layout_below="@+id/lynout_contentTitleDoc" >

            <SurfaceView
                android:id="@+id/videoSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>